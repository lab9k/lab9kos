@model lab9kos.Models.ViewModels.TakenViewModels.TaakUpdateFormViewModel

<form asp-action="Index" asp-controller="Taken">
    <input asp-for="Id" type="hidden"/>
    <div class="form-group">
        <label asp-for="Titel">
            <input asp-for="Titel"/>
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Beschrijving">
            <input asp-for="Beschrijving"/>
        </label>
    </div>
    <div class="form-group">
        @Html.DropDownListFor(model => model.TaakRealisatieNiveau, @Model.Niveaus, new {@class = "form-control"})
    </div>
</form>